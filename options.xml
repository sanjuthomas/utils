<options xmlns="http://marklogic.com/appservices/search">
  <search-option>unfiltered</search-option>
  <page-length>10</page-length>

  <!-- Limit all searches to this additional query -->
  <additional-query>
    <cts:collection-query xmlns:cts="http://marklogic.com/cts">
      <cts:uri>consultant</cts:uri>
    </cts:collection-query>
  </additional-query>

  <!-- Full-text search options -->
  <term apply="term">
    <empty apply="all-results"/>
    <term-option>punctuation-insensitive</term-option>
    <term-option>stemmed</term-option>
  </term>

  <!-- Default grammer -->
  <grammar>
    <quotation>"</quotation>
    <implicit>
      <cts:and-query strength="20" xmlns:cts="http://marklogic.com/cts"/>
    </implicit>
    <starter strength="30" apply="grouping" delimiter=")">(</starter>
    <starter strength="40" apply="prefix" element="cts:not-query">-</starter>
    <joiner strength="10" apply="infix" element="cts:or-query" tokenize="word">OR</joiner>
    <joiner strength="20" apply="infix" element="cts:and-query" tokenize="word">AND</joiner>
    <joiner strength="30" apply="infix" element="cts:near-query" tokenize="word">NEAR</joiner>
    <joiner strength="30" apply="near2" consume="2" element="cts:near-query">NEAR/</joiner>
    <joiner strength="50" apply="constraint">:</joiner>
    <joiner strength="50" apply="constraint" compare="LT" tokenize="word">LT</joiner>
    <joiner strength="50" apply="constraint" compare="LE" tokenize="word">LE</joiner>
    <joiner strength="50" apply="constraint" compare="GT" tokenize="word">GT</joiner>
    <joiner strength="50" apply="constraint" compare="GE" tokenize="word">GE</joiner>
    <joiner strength="50" apply="constraint" compare="NE" tokenize="word">NE</joiner>
  </grammar>

  <sort-order direction="descending">
    <score/>
  </sort-order>

  <transform-results apply="raw"/>

  <extract-document-data>
    <extract-path>/resource</extract-path>
    <extract-path>/title</extract-path>
    <extract-path>/summary</extract-path>
    <extract-path>/resume</extract-path>
    <extract-path>/organization</extract-path>
    <extract-path>/location</extract-path>
    <extract-path>/skills</extract-path>
    <extract-path>/manager</extract-path>
  </extract-document-data>

  <return-query>1</return-query>

  <operator name="results">
    <state name="compact">
      <transform-results apply="snippet">
        <preferred-elements><element ns="" name="body"/></preferred-elements>
        <max-matches>1</max-matches>
        <max-snippet-chars>150</max-snippet-chars>
        <per-match-tokens>20</per-match-tokens>
      </transform-results>
    </state>
    <state name="detailed">
      <transform-results apply="snippet">
        <preferred-elements><element ns="" name="body"/></preferred-elements>
        <max-matches>2</max-matches>
        <max-snippet-chars>400</max-snippet-chars>
        <per-match-tokens>30</per-match-tokens>
      </transform-results>
    </state>
    <state name="raw">
      <transform-results apply="raw">
      </transform-results>
    </state>
  </operator>

  <annotation>Delta options here</annotation>
 <default-suggestion-source>
 <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <json-property>resource</json-property>
  </range>
 </default-suggestion-source>

  <constraint name="Title">
    <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <json-property>title</json-property>
    </range>
  </constraint>

  <constraint name="Organization">
    <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <json-property>organization</json-property>
    </range>
  </constraint>

  <constraint name="Location">
    <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <json-property>location</json-property>
    </range>
  </constraint>

  <constraint name="Status">
    <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <json-property>status</json-property>
    </range>
  </constraint>

  <constraint name="Training">
    <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <json-property>training</json-property>
    </range>
  </constraint>
  <constraint name="Certification">
    <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <json-property>certification</json-property>
    </range>
  </constraint>
  <constraint name="School">
    <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <json-property>school</json-property>
    </range>
  </constraint>

  <constraint name="Degree">
    <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <json-property>degree</json-property>
    </range>
  </constraint>

  <constraint name="Skill">
    <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <field name="skill"/>
    </range>
  </constraint>

  <constraint name="Expert-Skill">
    <range type="xs:string" facet="true" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <field name="skill_expert"/>
    </range>
  </constraint>
  <constraint name="Manager">
    <range type="xs:string" facet="false" collation="http://marklogic.com/collation/codepoint">
      <facet-option>limit=5</facet-option>
      <facet-option>frequency-order</facet-option>
      <facet-option>descending</facet-option>
      <json-property>manager</json-property>
    </range>
  </constraint>
</options>
